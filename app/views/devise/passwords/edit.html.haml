%h2= t('common.password.edit.title')
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = f.error_notification
  = f.input :reset_password_token, :as => :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password, label: t('common.password.edit.new_password'), required: true, autofocus: true
    = f.input :password_confirmation, label: t('common.password.edit.confirmation'), required: true
  .form-actions
    = f.button :submit, t('common.password.edit.button'), class: 'btn btn-primary'
-#= render "devise/shared/links"
