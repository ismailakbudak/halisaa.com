%h2= t('admin.session.title')
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, label: t('activerecord.attributes.admin.email'), :required => false, :autofocus => true
    = f.input :password, label: t('activerecord.attributes.admin.password'),  :required => false
    = f.input :remember_me, label: t('admin.session.remember_me'),   :as => :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, t('admin.session.button')