%tr
  %td= user.name
  %td= user.email
  %td= user.blocked ? t('view.yes') : t('view.no')
  %td
    -#=link_to hq_users_path , class: 'btn btn-default btn-xs' do
    -#  %i.icon.glyphicon.glyphicon-eye-open
    - if user.blocked
      = link_to t('users.activate'), unblock_hq_user_path(user), class: "btn btn-success btn-xs #{user.blocked ? '' : 'disabled'}", method: :post
    - else
      = link_to t('users.block'), block_hq_user_path(user), class: "btn btn-danger btn-xs #{user.blocked ? 'disabled' : ''}", method: :post
