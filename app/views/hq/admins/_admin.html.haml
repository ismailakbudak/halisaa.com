%tr
  %td= admin.admin_profile.first_name
  %td= admin.email
  %td= admin.blocked ? t('view.yes') : t('view.no')
  %td
    -#=link_to hq_admins_path , class: 'btn btn-default btn-xs' do
    -#  %i.icon.glyphicon.glyphicon-eye-open
    - if admin.blocked
      = link_to unblock_hq_admin_path(admin), class: 'btn btn-success btn-xs', title: t('admins.activate'), 'data-toggle' => 'tooltip', method: :post do
        %i.fa.fa-check
    - else
      = link_to block_hq_admin_path(admin), class: 'btn btn-danger btn-xs', title: t('admins.block'), 'data-toggle' => 'tooltip', method: :post do
        %i.icon-ban-circle
