
.masthead
  %ul.nav.nav-pills.pull-right
    - if current_user
      %li.dropdown
        %a.dropdown-toggle{data: {toggle: 'dropdown'}, :href => '#'}
          %i.fa.fa-user
          = current_user.name
          %b.caret
        %ul.dropdown-menu
          %li
            = link_to edit_user_profile_path, class: 'btn btn-large' do
              %i.fa.fa-edit
              = t('navbar.edit_profile')
          %li
            = link_to edit_user_registration_path , class: 'btn btn-large' do
              %i.fa.fa-edit
              = t('navbar.edit_login_info')
          %li.dvider
          %li
            = link_to destroy_user_session_path, class: 'btn btn-large', method: :delete do
              %i.fa.fa-logout
              = t('navbar.logout')
    - else
      %li
        = link_to t('navbar.login'), new_user_session_path
      %li
        = link_to t('navbar.signup'), new_user_registration_path, class: 'btn btn-success'
    %li.dropdown
      %a.dropdown-toggle{data: {toggle: 'dropdown'}, :href => '#'}
        %i.fa.fa-flag
        = t("navbar.language.#{I18n.locale}")
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to change_language_path('en') do
            %i.fa.fa-flag
            = t('navbar.language.en')
        %li
          = link_to change_language_path('tr') do
            %i.fa.fa-flag
            = t('navbar.language.tr')
  %h3.muted= link_to 'Halisaa', root_path