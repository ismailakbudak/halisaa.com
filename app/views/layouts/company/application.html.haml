/[if IE 8]      <html class="no-js lt-ie10 lt-ie9" lang="en-us">
/[if IE 9]      <html class="no-js lt-ie10 lt-ie9" lang="en-us">
/[if lt IE 10]  <html class="no-js lt-ie10" lang="en-us">
%html{lang: I18n.locale, class: 'no-js'}
  %head
    %title
      - if content_for?(:title)
        = "#{yield(:title)} - Halisaa"
      -else
        Halisaa
    %meta(http-equiv="content-type" content="text/html" charset="utf-8")
    %meta(http-equiv="x-ua-compatible" content="ie=edge,chrome=1")
    %meta(name="description" content="Halisaa.com")
    %meta(name="author" content="ismail akbudak")
    %meta{content: 'initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width', name: 'viewport'}
    %meta(name="viewport" content="initial-scale=1.0,user-scalable=no,maximum-scale=1" media="(device-height: 568px)")

    %link(rel="shortcut icon" href="/assets/favicon.ico")

    = csrf_meta_tags

    / Stylesheets (Don't change include order)
    / %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css", :rel => "stylesheet"}
    = stylesheet_link_tag 'company/application',
                          '//netdna.bootstrapcdn.com/font-awesome/3.2.0/css/font-awesome.min.css',
                          '//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css',
                          media: 'all'

    :coffeescript
      @app                     = {}
      @app.locale              = '#{I18n.locale}'
      @app.remove_text         = '#{t('javascript.remove_text')}'
      @app.available_text      = '#{t('javascript.available_text')}'
      @app.error_occurred_text = '#{t('javascript.error_occurred_text')}'
    / Javascripts
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js',
                             'company/application', 'data-turbolinks-track' => false
    = yield :head
  %body.main

    / Navbar
    = render partial: 'layouts/company/partials/navbar'

    #wrapper

      / Sidebar
      %section#sidebar
        = render partial: 'layouts/company/partials/dock'

      / Tools
      %section#tools
        = render partial: 'layouts/company/partials/breadcrumb'
        = render partial: 'layouts/company/partials/toolbar'

      / Content
      #content
        = render partial: 'layouts/partials/messages'
        = yield

    / Footer
    = render partial: 'layouts/company/partials/footer'

    / Google Analytics
    = render partial: 'layouts/partials/trackers'