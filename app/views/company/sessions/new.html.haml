- content_for :title do
  = t('company.session.title')

%h2
  %i.fa.fa-building
  = t('company.session.title')
%hr/
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, label: t('activerecord.attributes.company.email'), required: false, autofocus: true
    = f.input :password, label: t('activerecord.attributes.company.password'),  required: false
    = f.input :remember_me, label: t('company.session.remember_me'), as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, t('company.session.button'), class: 'btn btn-primary'
%br
= render "devise/shared/links"