- content_for :title do
  = @astroturf.name
  = t('tt.show', resource_name: Astroturf.model_name.human)

- content_for :toolbar do
  =link_to detail_company_astroturf_path(@astroturf), class: 'btn btn-info', title: t('tooltip.timetable_detail'), data: {toggle: 'tooltip', placement: 'bottom'} do
    %i.fa.fa-calendar-o
    = t('tooltip.timetable_detail')
  = link_to edit_company_astroturf_path(@astroturf), class: 'btn btn-default', title: t('tooltip.edit'), data: {toggle: 'tooltip', placement: 'bottom'} do
    %i.icon-pencil
    = t('action_button.edit')
  =link_to timetable_company_astroturf_path(@astroturf), class: 'btn btn-info', title: t('tooltip.timetable'), data: {toggle: 'tooltip', placement: 'bottom'} do
    %i.fa.fa-calendar
    = t('tooltip.timetable')

.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Astroturf.model_name.human)
  .panel-body
    = show_for @astroturf do |s|
      .row
        .col-lg-4
          = s.attribute :name, if_blank: t('view.blank')
          = s.attribute :phone, if_blank: t('view.blank')
          = s.attribute :start_time, value: @astroturf.start_time.strftime("%H:%M")
          = s.attribute :finish_time, value: @astroturf.finish_time.strftime("%H:%M")
        .col-lg-4
          = s.attribute :name, :in => :city
          = s.attribute :name, :in => :town
        .col-lg-4
          = s.attribute :week_price, value: money(@astroturf.week_price)
          = s.attribute :weekend_price, value: money(@astroturf.weekend_price)
        .col-lg-12
          = s.attribute :address, if_blank: t('view.blank')
      %hr/
      .row
        .col-lg-4
          #map.collapse.in
            #map-canvas
- content_for :foot do
  :javascript
    var lng='#{@astroturf.longitude}';
    var ltd='#{@astroturf.latitude}';
    var zoom = 16;
    var halisaa = {};
    halisaa['latitude']   = ltd;
    halisaa['longitude']  = lng;
    halisaa['zoom']       = zoom;
    halisaa['draggable']  = false;
  = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?v=3.exp&#38;sensor=false&#38;libraries=places',
      'company/map'